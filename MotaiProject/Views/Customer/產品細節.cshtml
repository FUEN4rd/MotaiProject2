<script>

    let R = 1;
    /*let ALL = 10;*///商品上限
    let ALL = @ViewBag.Qty;//商品上限    


    function Count(id) {
        console.log(id)
        if (id == "minus") {
            if (R > 1) {
                R = R - 1;
                $("#123456").val(R);
            }
            //減
        }
        if (id == "plus") {
            if (R < ALL) {
                R++;
                $("#123456").val(R);
            }
            // 加
        }
    }
</script>

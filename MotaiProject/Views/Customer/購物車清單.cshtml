@model IEnumerable<MotaiProject.ViewModels.StatusCustomerViewModel>


@{
    /**/

    ViewBag.Title = "購物車清單";
    Layout = "~/Views/Shared/_Layout登入.cshtml";
}
<style>
    .wrapper {
        position: relative;
        width: 80%;
        height: 300px;
        overflow: hidden;
        margin: 100px auto;
    }

    /*ul {
        margin: 0;
        padding: 0;
        position: absolute;
    }

    li {
        margin: 20px;
        padding: 0;
        list-style: none;
    }*/

    ul.slides {
        width: 2200px;
        left: 0px;
        transition: all 1s;
    }

        ul.slides li {
            width: 200px;
            height: 300px;
            overflow: hidden;
            float: left;
        }

            ul.slides li img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

    .dot {
        bottom: 10px;
        width: 100%;
        display: flex;
        justify-content: center;
    }

        .dot li {
            border: 1px solid #fff;
            /* border-radius: 50%; */
            margin: 0 5px;
            width: 24px;
            height: 10px;
        }

    /* .dot li:hover{
            background: #fff;
        } */
    .slide_btn {
        display: flex;
        justify-content: center;
        align-items: center;
        top: 0;
        bottom: 0;
        width: 30px;
        color: #fff;
        position: absolute;
        font-size: 24px;
    }

    #prevSlide {
        left: 0;
    }

    #nextSlide {
        right: 0;
    }

    .slide_btn i {
        color: rgba(255, 255, 255, .6);
        transition: .5s;
    }

    .slide_btn:hover i {
        color: rgba(255, 255, 255, 1);
    }
</style>


<div class="container">


    @Html.RadioButton("rb", "rbvalue", true)



    <table class="table table-light">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Status.pName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Status.pPrice)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Status.sProductQty)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Status.pTotal)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Customer.cAddress)
                </th>
                <th scope="col">
                    刪除
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Status.pName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.pPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.sProductQty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.pTotal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.cAddress)
                    </td>
                    <td>
                        @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                        @Html.ActionLink("刪除", "購物車內刪除", "Customer", new { fId = item.Status.StatusId },
    new { OnClick= "return confirm('確定要刪除嗎?')",Class="btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="button" class="btn btn-dark" onclick="">確定結帳</button>
</div>



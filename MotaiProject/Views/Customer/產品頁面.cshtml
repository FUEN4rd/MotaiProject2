@model IEnumerable<MotaiProject.ViewModels.ProductViewModel>

@{
    Layout = "~/Views/Shared/_Layout登入.cshtml";
    ViewBag.Title = "產品頁面";

}

<style>
    .Y_productInfo {
        padding: 10px 20px;
        text-align: center;
        line-height: 1.5em;
        color: #FCD492;
        height: 90px;
    }
</style>
<div class="container">
    <div class="row ">
        @foreach (var item in Model)
        {

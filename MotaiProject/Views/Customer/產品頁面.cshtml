                    <div class="Y_productInfo">
                        <h4><b>@Html.DisplayFor(modelItem => item.pName)</b></h4>
                        <h5><b>NTD$ @Html.DisplayFor(modelItem => item.pPrice)</b></h5>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

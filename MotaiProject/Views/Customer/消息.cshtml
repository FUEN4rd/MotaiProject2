@using PagedList
@using PagedList.Mvc
@model IPagedList<MotaiProject.ViewModels.news>


@{
    ViewBag.Title = "消息";
    Layout = "~/Views/Shared/_Layout登入.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />

@*輪播牆*@
 
<div class="container">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="width:300px;height:300px;margin:0 auto; ">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/墨臺Logo.png" style="width:300px;height:300px" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/墨臺Logo.png" style="width:300px;height:300px" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/墨臺Logo.png" style="width:300px;height:300px" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <h2>消息</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().newPrmotion.sPromotinoCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().newPrmotion.PromotionDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().newPrmotion.pPromotionPostDate)
            </th>

        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <a href="@Url.Action(item.newPrmotion.pPromotionWeb)">

                <td>
                    @Html.DisplayFor(modelItem => item.newPrmotion.sPromotinoCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.newPrmotion.PromotionDescription)
                </td>                
                <td>
                    @Html.DisplayFor(modelItem => item.newPrmotion.pPromotionWeb)
                </td>
            </a>
        </tr>
        }
    </table>
</div>

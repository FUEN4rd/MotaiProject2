@using PagedList
@using PagedList.Mvc
@model IPagedList<MotaiProject.ViewModels.PromotionViewModel>


@{
    ViewBag.Title = "消息";
    Layout = "~/Views/Shared/_Layout登入.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />

@*輪播牆*@
 
<div class="container">
    <h2>消息</h2>

    
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="width:300px;height:300px;margin:0 auto; ">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/墨臺Logo.png" style="width:300px;height:300px" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/墨臺Logo.png" style="width:300px;height:300px" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Content/墨臺Logo.png" style="width:300px;height:300px" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
      


    <table class="table">
        <tr>
            <th style="display:none">
                @Html.DisplayNameFor(model => model.FirstOrDefault().PromotionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().PromotionName)
            </th>
            <th style="display:none">
                @Html.DisplayNameFor(model => model.FirstOrDefault().pPromotionStartDate)
            </th>
            <th style="display:none">
                @Html.DisplayNameFor(model => model.FirstOrDefault().pPromotionDeadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().pPromotionWeb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().pADimage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().pDiscountCode)
            </th>
            <th style="display:none">
                @Html.DisplayNameFor(model => model.FirstOrDefault().pDiscount)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PromotionId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PromotionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pPromotionStartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pPromotionDeadline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pPromotionWeb)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pADimage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pDiscountCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pDiscount)
                </td>
            </tr>
        }

    </table>
    @Html.PagedListPager(Model, Page => Url.Action("消息", new { Page }))

</div>
                        </div>

                        <div>
                            @Html.DisplayFor(model => model.cAddress)
                        </div>
                    </div>
                    <div class="row Y_row">
                        <div>
                            @Html.DisplayNameFor(model => model.cEmail)：
                        </div>

                        <div class="Y_email">
                            @Html.DisplayFor(model => model.cEmail)
                        </div>
                    </div>
                    <div class="row Y_row">
                        <div>
                            @Html.DisplayNameFor(model => model.cGUI)：
                        </div>

                        <div>
                            @Html.DisplayFor(model => model.cGUI)
                        </div>
                    </div>
                </div>
                <div>
                    @Html.ActionLink("修改個人資料", "修改會員資料", new { @class = "btn-Y_yellow", CustomerId = Model.CustomerId, style = "color: #ff0000;" })
                </div>
            </div>
        </div>
        <div>
            <div style="display:flex;justify-content:space-between">
                <div class="Y_member_border">
                    <div style="display:flex;justify-content:space-between">
                        <div class="Y_member_row">
                            <div class="row Y_row">
                                <div>
                                    @Html.DisplayNameFor(model => model.cAccount)：
                                </div>

                                <div>
                                    @Html.DisplayFor(model => model.cAccount)
                                </div>
                            </div>
                            <div class="row Y_row">
                                <div>
                                    @Html.DisplayNameFor(model => model.cPassword)：
                                </div>
                                <div>
                                    <button class="btn" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                        修改密碼
                                    </button>
                                </div>
                                <div class="collapse" id="collapseExample">
                                    <div class="card card-body card-deck" style="background-color:black">
                                        <div>
                                            舊密碼
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.cPassword, new { htmlAttributes = new { @class = "form-control", @id = "oldpass" } })
                                            </div>
                                        </div>


                                        <div>
                                            新密碼
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.cPassword, new { htmlAttributes = new { @class = "form-control", @id = "newpass" } })
                                            </div>
                                        </div>

                                        <div>
                                            確認密碼
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.cPassword, new { htmlAttributes = new { @class = "form-control", @id = "checkpass" } })
                                            </div>
                                        </div>
                                        <button class="btn btn-danger" id="changepassword" onclick="customerchangepassword()">修改密碼</button>
                                        <p id="warning"></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row"></div>
</div>




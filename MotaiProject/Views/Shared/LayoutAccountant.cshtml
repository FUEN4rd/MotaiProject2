@using MotaiProject.Models
@{
    tEmployee emp = Session[CSession關鍵字.SK_LOGINED_EMPLOYEE] as tEmployee;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="../../Scripts/jquery-3.5.1.min.js"></script>
    <link href="../../Scripts/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <style>
        body {
            background: url("/images/Employee_login.png");
            background-position: center 0;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }
        #wrapper {
            display: flex;
            min-height: 100vh;
        }

            #wrapper #content-wrapper {
                background-color: #f8f9fc;
                width: 100%;
                overflow-x: hidden;
            }

                #wrapper #content-wrapper #content {
                    flex: 1 0 auto;
                }
        
        .navbar-brand {
            margin: 8px;
        }


        /* The sidebar menu */
        .sidenav {
            height: 100%; /* Full-height: remove this if you want "auto" height */
            width: 160px; /* Set the width of the sidebar */
            position: fixed; /* Fixed Sidebar (stay in place on scroll) */
            z-index: 1; /* Stay on top */
            top: 0; /* Stay at the top */
            left: 0;
            background-color: #111; /* Black */
            overflow-x: hidden; /* Disable horizontal scroll */
            padding-top: 20px;
        }

            /* The navigation menu links */
            .sidenav a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 25px;
                color: #000000;
                display: block;
            }

                /* When you mouse over the navigation links, change their color */
                .sidenav a:hover {
                    color: #f1f1f1;
                }

        /* Style page content */
        .main {
            margin-left: 160px; /* Same as the width of the sidebar */
            padding: 0px 10px;
        }

        /* On smaller screens, where height is less than 450px, change the style of the sidebar (less padding and a smaller font size) */
        @@media screen and (max-height: 450px) {
            .sidenav {
                padding-top: 15px;
            }

                .sidenav a {
                    font-size: 18px;
                }
        }
    </style>

</head>
<body id="page-top">


    <div id="wrapper">
        <div class="sidenav" style="background-color:#A7674C">
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink">
                        <img style="height: auto;width: 100px;padding-bottom:40px" href="@Url.Action("首頁","Customer")" src="../../Content/墨臺Logo.png" alt="">
                    </i>
                </div>
            </a>
            @Html.ActionLink("會計首頁", "Accountant首頁", "Accountant", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("消息頁面", "員工看消息", "Accountant", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("產品頁面", "會計看產品頁面", "Accountant", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("會計查詢", "會計查詢", "Accountant", new { area = "" }, new { @class = "navbar-brand" })      
            @Html.ActionLink("登出", "員工登出", "Employee", new { area = "" }, new { @class = "navbar-brand" })
        </div>





        <div class="container body-content;">
            <div style="background-color:rgba(255, 255, 255,0.8) ;width:960px; border-radius:10px; margin-top:50px;" class="main">
                @RenderBody()
            </div>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - 墨臺</p>
            </footer>
        </div>
    </div>

    <script src="../../Scripts/jquery-3.5.1.min.js"></script>
    <script src="../../Scripts/jquery.validate.min.js"></script>
    <script src="../../Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="../../Scripts/bootstrap.bundle.min.js"></script>
    <link href="../../Scripts/bootstrap/bootstrap.min.css" rel="stylesheet" />

</body>
</html>
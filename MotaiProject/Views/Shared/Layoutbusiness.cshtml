@using MotaiProject.Models
@{
    tEmployee emp = Session[CSession關鍵字.SK_LOGINED_EMPLOYEE] as tEmployee;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="../../Scripts/jquery-3.5.1.min.js"></script>
    <link href="../../Scripts/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <style>
        #wrapper {
            display: flex;
        }

            #wrapper #content-wrapper {
                background-color: #f8f9fc;
                width: 100%;
                overflow-x: hidden;
            }

                #wrapper #content-wrapper #content {
                    flex: 10 auto;
                }

        body {
            background: url("/images/Employee_login.png");
            background-position: center 0;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }
    </style>

</head>
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav sidebar accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->

            <li class="sidebar-brand-text mx-3">
                <span>@Html.ActionLink("業務部首頁", "Business首頁", "Business", new { area = "" }, new { @class = "navbar-brand" })</span>
            </li>


            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <li class="nav-item">
                <i class="fas fa-fw fa-cog"></i>
                <span>@Html.ActionLink("消息頁面", "員工看消息", "Business", new { area = "" }, new { @class = "navbar-brand" })</span>
            </li>

            <li class="nav-item active">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>@Html.ActionLink("產品頁面", "業務看產品頁面", "Business", new { area = "" }, new { @class = "navbar-brand" })</span>
            </li>
            <li class="nav-item">
                <i class="fas fa-fw fa-wrench"></i>
                    <span>@Html.ActionLink("業務會計查詢", "業務會計查詢", "Business", new { area = "" }, new { @class = "navbar-brand" })</span>
            </li>
            <li class="nav-item">
                <i class="fas fa-fw fa-folder"></i>
                    <span> @Html.ActionLink("工作日誌", "工作日誌", "Business", new { area = "" }, new { @class = "navbar-brand" })</span>
            </li>
            @*Nav Item - Charts*@
            <li class="nav-item">
                <a class="nav-link" href="charts.html">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>@Html.ActionLink("登出", "員工登出", "Employee")</span>
                </a>
            </li>

        </ul>
        <div class="container body-content;">
            <div style="background-color:rgba(255, 255, 255,0.3) ;width:960px; border-radius:10px; margin-top:50px;">
                @RenderBody()
            </div>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - 墨臺</p>
            </footer>
        </div>
    </div>

    <script src="../../Scripts/jquery-3.5.1.min.js"></script>
    <script src="../../Scripts/jquery.validate.min.js"></script>
    <script src="../../Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="../../Scripts/bootstrap.bundle.min.js"></script>
    <link href="../../Scripts/bootstrap/bootstrap.min.css" rel="stylesheet" />

</body>
</html>